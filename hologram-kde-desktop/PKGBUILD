pkgname='hologram-kde-desktop'
pkgver=1.0.0
pkgrel=1
pkgdesc='hologram: GUI installation with KDE Plasma desktop'
arch=('any')
url=''
license=('AGPL3')
depends=() # runtime dependencies are listed below
source=(
    'sddm.conf'
)

package() {
    depends=(
        'hologram-base-gui'
        # display manager
        'sddm'
        # desktop
        $(pacman -Sqg plasma | grep -v bluedevil | grep -v plasna-nm)
        'breeze-kde4'
        'gtk-theme-orion'
        'gst-plugins-good' # optional: for WebM support in qt5-webkit
        'mariadb'          # optional: for Akonadi
        'kde-agent'        # optional: GPG agent integration
        # applications
        'kdeutils-ark'
        'kdebase-dolphin'
        'gwenview'
        'filelight'
        'kcharselect'
        'kdegraphics-kcolorchooser'
        'kdeutils-kgpg'
        'kid3'
        'kmix'
        'kdegraphics-kolourpaint'
        'konsole'
        'kruler'
        'kdegraphics-ksnapshot'
        'kdeutils-kwalletmanager'
        'yakuake'
    )

    mkdir -p "${pkgdir}/etc/systemd/system/"
    ln -sf /usr/lib/systemd/system/sddm.service "${pkgdir}/etc/systemd/system/display-manager.service"

    install -D -m 0644 sddm.conf "${pkgdir}/etc/sddm.conf"
}
