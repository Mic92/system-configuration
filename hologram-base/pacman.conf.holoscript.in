#!/bin/sh

# add catalyst repo on Arcturus only (and before all other repos, as instructed
# by the Arch wiki)
if grep -qw arcturus /etc/hostname; then
    echo '[catalyst]'
    echo 'Server = http://catalyst.wirephire.com/repo/catalyst/$arch'
    echo
fi

sed '
    # enable additional options
    s/^#\(Color\|VerbosePkgLists\)$/\1/

    # enable multilib repo
    /^#\[multilib]/,/^$/s/^#//
'

# add holo repo
echo
echo '[holo]'
echo 'SigLevel = Optional TrustAll'
echo 'Server = http://${DAMOGRAN_HTTP_STATIC_DOMAIN}/repo'

